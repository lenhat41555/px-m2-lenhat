@model IEnumerable<Book>

<div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
                Create New Book
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        BookName
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Content
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        PublishingYear
                    </th>
                    <th>
                        Category Id
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Book in Model)
                {
                    <tr>
                        <td width="32%">
                            @Book.NameBook
                        </td>
                        <td width="40%">
                            @Book.Amount
                        </td>
                        <td width="31%">
                            @Book.Content
                        </td>
                        <td width="32%">
                            @Book.Author
                        </td>
                        <td width="30%">
                            @Book.PublishingYear
                        </td>
                        <td width="10%">
                            @Book.CategoryId
                        </td>


                        <td>
                            <div>

                                <a asp-controller="Book" asp-action="Delete" asp-route-Id="@Book.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>


    }
    else
    {
        <p>Không tồn tại thể loại trong database</p>
    }


</div>